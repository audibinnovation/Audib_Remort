<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:justifyContent="center"
        app:alignItems="stretch">

        <!-- Status -->
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_disconnected"
            android:textColor="@color/teal_200"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <!-- Bluetooth Controls -->
        <Button android:id="@+id/btnEnableBT" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/enable_bt"/>
        <Button android:id="@+id/btnScan" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/scan"/>
        <Button android:id="@+id/btnConnect" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/connect"/>
        <Button android:id="@+id/btnDisconnect" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/disconnect"/>

        <!-- Power button separate -->
        <Button android:id="@+id/btnPower" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center" android:layout_margin="12dp"
            android:text="@string/power"/>

        <!-- Centered Volume Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <Button android:id="@+id/btnVolDown" style="?attr/materialButtonStyle"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_margin="12dp" android:text="@string/vol_down"/>

            <Button android:id="@+id/btnMute" style="?attr/materialButtonStyle"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_margin="12dp" android:text="@string/mute"/>

            <Button android:id="@+id/btnVolUp" style="?attr/materialButtonStyle"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_margin="12dp" android:text="@string/vol_up"/>
        </LinearLayout>

        <!-- Inputs -->
        <Button android:id="@+id/btnIN0" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/in0"/>
        <Button android:id="@+id/btnIN1" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/in1"/>
        <Button android:id="@+id/btnIN2" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/in2"/>
        <Button android:id="@+id/btnIN3" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/in3"/>
        <Button android:id="@+id/btnIN4" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/in4"/>
        <Button android:id="@+id/btnPrevIN" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/prev_in"/>
        <Button android:id="@+id/btnNextIN" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/next_in"/>

        <!-- Audio Features -->
        <Button android:id="@+id/btnMenu" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/menu"/>
        <Button android:id="@+id/btnLoudness" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/loudness"/>
        <Button android:id="@+id/btnSurround" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/surround"/>
        <Button android:id="@+id/btn3D" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/three_d"/>
        <Button android:id="@+id/btnToneBypass" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/tone_bypass"/>

        <!-- FM Controls -->
        <Button android:id="@+id/btnFMUp" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/fm_up"/>
        <Button android:id="@+id/btnFMDown" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/fm_down"/>
        <Button android:id="@+id/btnFMMode" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/fm_mode"/>
        <Button android:id="@+id/btnRDS" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/rds"/>
        <Button android:id="@+id/btnFMStore" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/fm_store"/>
        <Button android:id="@+id/btnFMMono" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/fm_mono"/>

        <!-- Numeric Keypad -->
        <Button android:id="@+id/btn1" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/digit_1"/>
        <Button android:id="@+id/btn2" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/digit_2"/>
        <Button android:id="@+id/btn3" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/digit_3"/>
        <Button android:id="@+id/btn4" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/digit_4"/>

        <Button android:id="@+id/btn5" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/digit_5"/>

        <Button android:id="@+id/btn6" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/digit_6"/>

        <Button android:id="@+id/btn7" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/digit_7"/>

        <Button android:id="@+id/btn8" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/digit_8"/>

        <Button android:id="@+id/btn9" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/digit_9"/>

        <Button android:id="@+id/btn0" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/digit_0"/>

        <!-- System Controls -->
        <Button android:id="@+id/btnTime" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/time"/>

        <Button android:id="@+id/btnAlarm" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minWidth="48dp" android:minHeight="48dp"
            android:layout_margin="8dp" android:text="@string/alarm"/>

        <Button android:id="@+id/btnTimer" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/timer"/>

        <Button android:id="@+id/btnDisplay" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/display"/>

        <Button android:id="@+id/btnSpectrum" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/spectrum"/>

        <Button android:id="@+id/btnFullSpeed" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/full_speed"/>

        <Button android:id="@+id/btnBright" style="?attr/materialButtonStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="8dp" android:text="@string/bright"/>

    </com.google.android.flexbox.FlexboxLayout>
</ScrollView>